{
  "name": "scopes",
  "displayName": "Scopes",
  "description": "Allows you to split up a code repository into multiple views (scopes) in file explorer and file search.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "scopesManager",
          "name": "Scopes"
        }
      ]
    },
    "commands": [
      {
        "command": "scopes.refresh",
        "title": "Refresh scopes settings",
        "category": "Scopes"
      },
      {
        "command": "scopes.toggle",
        "title": "Toggle scopes visibility",
        "category": "Scopes"
      },
      {
        "command": "scopes.toggleInclusion",
        "title": "Scopes: Always include this path (Toggle)",
        "category": "Scopes"
      },
      {
        "command": "scopes.toggleExclusion",
        "title": "Scopes: Exclude this path (Toggle)",
        "shortTitle": "hi",
        "category": "Scopes"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "scopes.toggleInclusion",
          "when": "filesExplorerFocus"
        },
        {
          "command": "scopes.toggleExclusion",
          "when": "filesExplorerFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "scopes.toggleInclusion",
          "group": "Scopes"
        },
        {
          "command": "scopes.toggleExclusion",
          "group": "Scopes"
        }
      ],
      "view/item/context": [
        {
          "command": "scopes.toggleInclusion",
          "when": "viewItem == 'inclusion'"
        },
        {
          "command": "scopes.toggleExclusion",
          "when": "viewItem == 'exclusion'"
        }
      ]
    },
    "configuration": {
      "title": "Scopes",
      "properties": {
        "scopes.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether or not to show/hide files based on scope selection"
        },
        "scopes.activeScope": {
          "type": "string",
          "default": "base",
          "description": "Scope currently in use by the Scopes extension"
        },
        "scopes.globalExclude": {
          "type": "object",
          "default": null,
          "description": "Globals to merge in with scope settings into files.exclude"
        },
        "scopes.scopes": {
          "type": "object",
          "default": {
            "base": {
              "included": [],
              "excluded": []
            }
          },
          "description": "Inclusion/exclusion settings per scope."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
